<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.cy.cyphotoalbumutils.albumselect.view.CropImageView
        android:id="@+id/civ"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_half"

        android:orientation="vertical">


        <com.cy.translucentparent.StatusBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/iv_title_padding_content"
                android:src="@drawable/back" />


            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_back"
                android:text="裁剪"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_content"
                android:background="@drawable/white_shape"
                android:text="完成"
                android:textColor="@color/theme" />

        </RelativeLayout>
    </LinearLayout>


</FrameLayout>
